@model DropBoxClient.Models.FileUploadViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h4>@ViewBag.dbUser</h4>
<hr />
<div class="row">
    <div class="col-md-offset-1 col-md-8">
        <h2>New Article</h2>

        @using (Html.BeginForm("NewDirectory", "DBManager", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="control-label">Directory Name</label>
                <input type="text" id="dirname" name="dirname" class="form-control" />
            </div>
            <div class="text-right">
                <input type="submit" id="add" name="add" value="Add New Directory" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-offset-1 col-md-8">
        <h2>Upload a File</h2>

        @using (Html.BeginForm("UploadFile", "DBManager", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="control-label">Directory Name</label>
                @Html.TextBoxFor(m => m.Dir)
            </div>

            <div class="form-group">
                <label class="control-label">File to Upload</label>
                @Html.TextBoxFor(m => m.File, new { type = "file" })
            </div>
            <div class="text-right">
                <input type="submit" id="add" name="add" value="Upload File" class="btn btn-primary" />
            </div>
        }
    </div>
</div>




